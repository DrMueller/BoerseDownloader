<UserControl x:Class="MMU.BoerseDownloader.WpfUI.UserControls.InformationBarControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             x:Name="uc"
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <TextBox
            Text="{Binding ConcatedInformationText, ElementName=uc, Mode=OneWay}"
            Foreground="{Binding ForegroundColor, ElementName=uc, Mode=OneWay}"
            Style="{StaticResource StyleTextBoxInformationBar}" />
    </Grid>
</UserControl>